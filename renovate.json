{
  "extends": [
    "config:base",
    ":pinAllExceptPeerDependencies",
    ":automergeMinor",
    ":maintainLockFilesWeekly",
    ":skipStatusChecks"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": "before 6am",
  "labels": ["renovate"],
  "lockFileMaintenance": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["@cybozu/eslint-config"],
      "automerge": true
    }
  ]
}
